<!DOCTYPE html>
<html>
<head>
  <title>Gestión de Choferes</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="p-4">
  <h1 class="text-2xl font-bold mb-4">Choferes de la Empresa</h1>

  <!-- Formulario para agregar chofer -->
  <form action="/choferes/agregar" method="POST" class="mb-6 space-x-2">
    <input type="text" name="nombre" placeholder="Nombre completo" required class="border p-1">
    <input type="text" name="rut" placeholder="RUT" required class="border p-1">
    <input type="text" name="telefono" placeholder="Teléfono" class="border p-1">
    <button type="submit" class="bg-blue-500 text-white px-4 py-1">Agregar</button>
  </form>

  <!-- Tabla de choferes -->
  <table class="w-full border">
    <thead>
      <tr class="bg-gray-200">
        <th class="p-2 border">Nombre</th>
        <th class="p-2 border">RUT</th>
        <th class="p-2 border">Teléfono</th>
        <th class="p-2 border">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% choferes.forEach(c => { %>
        <tr>
          <td class="border p-1"><%= c.nombre %></td>
          <td class="border p-1"><%= c.rut %></td>
          <td class="border p-1"><%= c.telefono %></td>
          <td class="border p-1 flex gap-2">
            <form action="/choferes/eliminar/<%= c.id %>" method="POST" onsubmit="return confirm('¿Eliminar este chofer?')">
              <button class="text-red-500">Eliminar</button>
            </form>
          </td>
          <td>
            <a href="/choferes/editar/<%= c.id %>" class="text-blue-500">Editar</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
